                    <GroupBox Header="Utilisateurs" HorizontalAlignment="Left" Margin="10,71,0,6" Name="groupBoxListUsers_Test" Width="255" Height="382">
                        <Grid>
                            <Label Content="Total : 0" Height="28" HorizontalAlignment="Left" Margin="6,0,0,6" Name="labelCountTotal_Test" VerticalAlignment="Bottom" />
